<%- include('partials/header') %>

<div class="bg-gray-900 rounded-xl shadow-lg p-8 space-y-10 text-gray-100">
  <!-- Personal Introduction -->
  <section class="text-center">
    <h1 class="text-4xl font-bold text-white"><%= resume.name %></h1>
    <h2 class="text-xl text-blue-400 mt-2"><%= resume.title %></h2>
    <div class="mt-8 max-w-3xl mx-auto">
      <p class="text-gray-300 text-lg leading-relaxed"><%= resume.summary %></p>
    </div>
  </section>

  <!-- Personal Interests -->
  <section class="max-w-3xl mx-auto">
    <h2
      class="text-2xl font-semibold text-blue-400 border-b border-gray-700 pb-2 mb-6"
    >
      Personal Interests
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-gray-800 p-6 rounded-lg">
        <h3 class="text-xl font-medium text-white mb-3">Passions</h3>
        <p class="text-gray-300">
          Technology, Entrepreneurship, Fashion, and Innovation
        </p>
      </div>
      <div class="bg-gray-800 p-6 rounded-lg">
        <h3 class="text-xl font-medium text-white mb-3">Goals</h3>
        <p class="text-gray-300">
          Building impactful businesses and creating innovative solutions
        </p>
      </div>
    </div>
  </section>
</div>

<%- include('partials/footer') %>
