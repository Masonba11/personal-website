    <!-- Contact Section -->
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold chrome-text mb-6">JOIN THE MOVEMENT</h2>
      <p class="text-gray-300 text-lg mb-4">
        Ready to make a statement? Connect with us to learn more about our
        latest collections and upcoming releases.
      </p>
      <div class="flex flex-col items-center space-y-4 mb-8">
        <p class="text-gray-300 text-lg">
