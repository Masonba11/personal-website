<%- include('partials/header') %>

<div class="fade-in">
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-b from-gray-900 to-black py-24">
    <div
      class="absolute inset-0 bg-[url('/images/contact-bg.jpg')] bg-cover bg-center opacity-20"
    ></div>
    <div class="relative container mx-auto px-6">
      <h1 class="text-6xl font-bold chrome-text mb-6 tracking-tight">
        GET IN TOUCH
      </h1>
      <p class="text-2xl text-gray-300 max-w-2xl">
        Let's Connect and Create Something Amazing
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-6 py-16">
    <!-- Contact Information -->
    <div class="max-w-4xl mx-auto mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Email Section -->
        <div
          class="bg-gray-900 p-8 rounded-lg transform hover:scale-105 transition-transform duration-300 border border-gray-800"
        >
          <div class="flex items-center justify-center mb-6">
            <svg
              class="w-12 h-12 chrome-text"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              />
            </svg>
          </div>
          <h2 class="text-2xl font-bold chrome-text mb-4 text-center">Email</h2>
          <p class="text-gray-300 text-lg text-center mb-6">
            Reach out for business inquiries, collaborations, or just to say
            hello
          </p>
          <a
            href="mailto:masonjball@gmail.com"
            class="chrome-button px-8 py-3 rounded-full font-medium block text-center"
          >
            masonjball@gmail.com
          </a>
        </div>

        <!-- Phone Section -->
        <div
          class="bg-gray-900 p-8 rounded-lg transform hover:scale-105 transition-transform duration-300 border border-gray-800"
        >
          <div class="flex items-center justify-center mb-6">
            <svg
              class="w-12 h-12 chrome-text"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              />
            </svg>
          </div>
          <h2 class="text-2xl font-bold chrome-text mb-4 text-center">Phone</h2>
          <p class="text-gray-300 text-lg text-center mb-6">
            Available for calls during business hours
          </p>
          <a
            href="tel:4807370850"
            class="chrome-button px-8 py-3 rounded-full font-medium block text-center"
          >
            (480) 737-0850
          </a>
        </div>
      </div>
    </div>

    <!-- Additional Contact Methods -->
    <div class="max-w-4xl mx-auto">
      <div
        class="bg-gray-900 p-8 rounded-lg transform hover:scale-105 transition-transform duration-300 border border-gray-800"
      >
        <h2 class="text-3xl font-bold chrome-text mb-6 text-center">
          CONNECT WITH ME
        </h2>
        <p class="text-gray-300 text-lg text-center mb-8">
          I'm always open to discussing new projects, creative ideas, or
          opportunities to be part of your vision.
        </p>
        <div class="flex justify-center">
          <a
            href="mailto:masonjball@gmail.com"
            class="chrome-button px-8 py-3 rounded-full font-medium"
          >
            Send Message
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
